<div class="container pt-4">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-8">
      <%= render 'shared/errors', obj: @exam %>
      <%= form_with(model: @exam, class: "form shadow card p-4 p-lg-5 mb-5 mx-auto") do |f| %>
      
        <h1 class="text-center mb-5 text-primary font-weight-bold">Add Exam</h1>

        <div class="form-group row mb-2">
          <%= f.label :Subject, class: "col-12" %>
          <div class="col-12">
            <%= f.text_field :subject, class: "form-control shadow rounded", placeholder: "Enter the subject name", required: true %>
          </div>
        </div>

        <div class="form-group row mb-2">
          <%= f.label "Instructions (Comma separated)", class: "col-12" %>
          <div class="col-12">
            <%= f.text_area :instructions, class: "form-control shadow rounded", placeholder: "Enter the exam instructions", required: true  %>
          </div>
        </div>

        <div class="form-group row mb-2">
          <%= f.label "Pass Mark", class: "col-12" %>
          <div class="col-12"> 
            <%= f.text_field :pass_mark, class: "form-control shadow rounded", placeholder: "Minimum marks required to pass", required: true  %>
          </div>
        </div>

        <div class="form-group row mb-2">
          <%= f.label "Total Marks", class: "col-12" %>
          <div class="col-12"> 
            <%= f.text_field :total_marks, class: "form-control shadow rounded", placeholder: "Enter the total marks", required: true  %>
          </div>
        </div>

        <div class="form-group row mb-2">
          <%= f.label "Start Time", class: "col-12" %>
          <div class="col-12"> 
            <span class="datetime">
              <%= f.datetime_select :start_time, class: "form-control shadow rounded", placeholder: "Enter the start time of exam", required: true  %>
            </span>
          </div>
        </div>

        <div class="form-group row mb-2">
          <%= f.label "End Time", class: "col-12" %>
          <div class="col-12"> 
            <span class="datetime">
              <%= f.datetime_select :end_time, class: "form-control shadow rounded", placeholder: "Enter the end time of exam", required: true  %>
            </span>
          </div>
        </div>

        <div class="form-group row justify-content-center mt-5">
          <%= f.submit "Create Exam",class: "btn btn-lg btn-success m-2" %>
        </div>
      <% end %>
    </div>
  </div>
</div>