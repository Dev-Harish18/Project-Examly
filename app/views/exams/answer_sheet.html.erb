<div class="container pt-4">
  <div class="row justify-content-center">
    <div class="col-12">
      <h1 class="text-center mb-5 text-primary font-weight-bold"><%= @exam.subject%> Examination</h1>

      <%= form_with(url:"/exams/#{@exam.id}/answersheet", method: :post, class: "form shadow card p-4 p-lg-5 mb-5 mx-auto") do |f| %>
    
        <% @exam.questions.each_with_index do |question, idx|%>
            <div class="form-group row">
              <%= f.label question.question, class: "col-12 font-weight-bold" %>
              <p class="font-weight-bold ml-auto">( <%= question.marks %> marks)</p>
              <div class="col-12"> 
                <%= f.text_area "answers[]", rows: 5, class: "form-control shadow rounded", placeholder: "Enter the answer"%>
              </div>
            </div>

            <% unless idx == (@exam.questions.count - 1) %>
              <hr class="border"/>
            <% end %>
        <% end %>

        <div class="form-group row justify-content-center my-auto">
          <%= f.button "Submit",class: "btn btn-lg btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>