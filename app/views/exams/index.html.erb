<p id="notice"><%= notice %></p>

<h1>Exams</h1>

<table>
  <thead>
    <tr>
      <th>Subject</th>
      <th>Instructions</th>
      <th>Pass mark</th>
      <th>Total marks</th>
      <th>Start time</th>
      <th>End time</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exams.each do |exam| %>
      <tr>
        <td><%= exam.subject %></td>
        <td><%= exam.instructions %></td>
        <td><%= exam.pass_mark %></td>
        <td><%= exam.total_marks %></td>
        <td><%= exam.start_time %></td>
        <td><%= exam.end_time %></td>
        <td><%= exam.user_id %></td>
        <td><%= link_to 'Show', exam %></td>
        <td><%= link_to 'Edit', edit_exam_path(exam) %></td>
        <td><%= link_to 'Destroy', exam, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Exam', new_exam_path %>
