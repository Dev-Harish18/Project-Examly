<div class="container pt-4">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-6">

      <%= form_with(url: "/exams/search", method: :post, class: "form shadow card p-4 p-md-5 mb-5 mx-auto") do |f| %>
      
        <h1 class="text-center mb-5 text-primary font-weight-bold">Find Exam</h1>
    
        <div class="row mx-auto mb-2">
          <%= image_tag "search-exam-illustration.webp", class: "search-exam-img"%>
        </div>

        <div class="form-group row">
          <%= f.label "Exam code", class: "col-12" %>
          <div class="col-12"> 
            <%= f.text_field :exam_code, class: "form-control shadow rounded", placeholder: "Enter the exam code"%>
          </div>
        </div>


        <div class="form-group row justify-content-center my-auto">
          <%= f.button "Find Exam",class: "btn btn-lg btn-primary" %>
        </div>
      <% end %>
    </div>
    
  </div>
</div>