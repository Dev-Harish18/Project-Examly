<div class="container pt-4">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-6">

      <%= form_with(url: "/users/login", method: :post, class: "form shadow card p-4 p-md-5 mb-5 mx-auto") do |f| %>
      
        <h1 class="text-center mb-5 text-primary font-weight-bold">Sign in</h1>
    
        <div class="row mx-auto mb-2">
          <%= image_tag "profile.png", class: "profile-img"%>
        </div>

        <div class="form-group row">
          <%= f.label :Email, class: "col-12" %>
          <div class="col-12"> 
            <%= f.text_field :email, class: "form-control shadow rounded"%>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :Password, class: "col-12" %>
          <div class="col-12"> 
            <%= f.password_field :password, class: "form-control shadow rounded"%>
          </div>
        </div>


        <div class="form-group row justify-content-center my-auto">
          <%= f.button "Sign in",class: "btn btn-lg btn-primary" %>
        </div>
      <% end %>
    </div>
    
  </div>
</div>