<div class="row p-3 p-lg-5 mt-4 mx-auto card text-center profile-card">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp" alt="avatar"
          class="rounded-circle img-fluid mx-auto" style="width: 150px;">
        <h1 class="my-3"><%= current_user.full_name.titleize %></h1>
        <p class="text-muted mb-1 font"><%= current_user.role.titleize %></p>
        <p class="text-muted mb-1 font"><%= current_user.email %></p>
        <p class="text-muted mb-1 font"><%= current_user.institution.titleize %></p>
        
        <div class="d-flex justify-content-center mb-2">
          <% if current_user.role == "student" %>
                <%= link_to "Find Result", students/results/search", class:"btn btn-primary m-2" %>
                <%= link_to "Attend Exam", "/exams/search", class:"btn btn-outline-primary ms-1 m-2" %>
          <% else %>
                <%= link_to "Create an exam", new_exam_path, class:"btn btn-primary m-2" %>
                <%= link_to "My Exams", "/exams", class:"btn btn-outline-primary ms-1 m-2" %>
          <% end %>   
        </div>
</div>
