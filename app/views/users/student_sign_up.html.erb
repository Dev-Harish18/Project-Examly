<div class="container pt-4">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-6">
      <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, class: "form shadow card p-4 p-lg-5 mb-5 mx-auto") do |f| %>
      
        <h1 class="text-center mb-5 text-primary font-weight-bold">Sign Up</h1>
    
        <div class="row mx-auto mb-2">
          <%= image_tag "profile.png", class: "profile-img"%>
        </div>

        <div class="form-group row mb-2">
          <%= f.label :Name, class: "col-12" %>
          <div class="col-12">
            <%= f.text_field :full_name, class: "form-control shadow rounded", placeholder: "Enter your name" %>
          </div>
        </div>

        <div class="form-group row mb-2">
          <%= f.label "Roll number", class: "col-12" %>
          <div class="col-12">
            <%= f.text_field :roll_no, class: "form-control shadow rounded", placeholder: "Enter your roll no." %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :Email, class: "col-12" %>
          <div class="col-12"> 
            <%= f.text_field :email, class: "form-control shadow rounded", placeholder: "Enter your email" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :Institution, class: "col-12" %>
          <div class="col-12"> 
            <%= f.text_field :institution, class: "form-control shadow rounded", placeholder: "Enter your institution name" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :Password, class: "col-12" %>
          <div class="col-12"> 
            <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Enter your password" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label"Confirm Password", class: "col-12" %>
          <div class="col-12"> 
            <%= f.password_field :password_confirmation, class: "form-control shadow rounded", placeholder: "Confirm your password" %>
          </div>
        </div>

        <%= hidden_field_tag 'role', 'student'  %>

        <div class="form-group row justify-content-center my-auto">
          <%= f.button "Sign up",class: "btn btn-lg btn-primary" %>
        </div>
      <% end %>
    </div>
    <%# <div class="mb-3">
      <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-info" %>
    <%# <% </div> %> 
  </div>
</div>